<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-body">
        <h2 class="card-title mb-4">Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-floating mb-3">
            <%= f.email_field :email, autofocus: true, class: 'form-control', id: 'email_field', placeholder: 'example@example.com' %>
            <%= f.label :email, for: 'email_field'%>
          </div>
          <div class="form-floating mb-3">
            <%= f.password_field :password, class: 'form-control', id: 'pass_field', 'aria-describedby': "passwordHelp", placeholder: 'Password' %>
            <%= f.label :password, for: 'pass_field' %>
            <% if @minimum_password_length %>
              <div id="passwordHelp" class="form-text"><em>(<%= @minimum_password_length %> characters minimum)</em></div>
            <% end %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class=" form-check mb-3">
              <%= f.check_box :remember_me, class: 'form-check-input', id: 'remember' %>
              <%= f.label :remember_me, class: 'form-check-label', for: 'remember'%>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.submit "Log in", class: 'btn btn-success' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>